<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="SmartGreen.View.AgregarInvernadero"
             Title="AgregarInvernadero"
             BackgroundImageSource="fondo.png">
    
    <ContentPage.Resources>
        <!-- Estilos optimizados -->
        <Style x:Key="LabelTitleStyle" TargetType="Label">
            <Setter Property="FontAttributes" Value="Bold"/>
            <Setter Property="FontSize" Value="25"/>
            <Setter Property="HorizontalOptions" Value="Center"/>
            <Setter Property="TextColor" Value="#4c9f38"/>
        </Style>

        <Style x:Key="LabelFieldStyle" TargetType="Label">
            <Setter Property="FontSize" Value="18"/>
            <Setter Property="FontAttributes" Value="Bold"/>
            <Setter Property="TextColor" Value="Black"/>
        </Style>

        <Style x:Key="EntryStyle" TargetType="Entry">
            <Setter Property="BackgroundColor" Value="Transparent"/>
            <Setter Property="PlaceholderColor" Value="Gray"/>
            <Setter Property="TextColor" Value="Black"/>
            <Setter Property="FontSize" Value="16"/>
            <Setter Property="HeightRequest" Value="50"/>
            <Setter Property="Margin" Value="0,5,0,5"/>
        </Style>

        <Style x:Key="ButtonStyle" TargetType="Button">
            <Setter Property="CornerRadius" Value="25"/>
            <Setter Property="WidthRequest" Value="140"/>
            <Setter Property="FontSize" Value="18"/>
            <Setter Property="FontAttributes" Value="Bold"/>
        </Style>
    </ContentPage.Resources>

    <ScrollView>
        <VerticalStackLayout Padding="20" Spacing="20">

            <!-- Encabezado con botón de regreso y título bien centrado -->
            <Grid ColumnDefinitions="Auto, *, Auto">


               
            </Grid>

            <!-- Contenedor con fondo blanco y opacidad SIN afectar el contenido -->
            <Frame BackgroundColor="Transparent"
                   CornerRadius="30"
                   Padding="0"
                   HasShadow="False"
                   HorizontalOptions="Fill"
                   VerticalOptions="Fill">

                <Grid>
                    <!-- Fondo con opacidad -->
                    <BoxView Color="White"
                             Opacity="0.6"
                             CornerRadius="30"
                             HorizontalOptions="Fill"
                             VerticalOptions="Fill"
                             InputTransparent="True"
                             />

                    <!-- Contenido sin opacidad -->
                    <VerticalStackLayout Padding="20" Spacing="15">

                        <!-- Imagen -->
                        <Frame WidthRequest="150" HeightRequest="150"
                               CornerRadius="50" BorderColor="Transparent"
                               HasShadow="False" HorizontalOptions="Center" Opacity="0.8">
                          <Image Source="invernadero.jpg" Aspect="AspectFill"/>

                        </Frame>

                        <!-- Campo ID -->
                        <Label Text="ID:" Style="{StaticResource LabelFieldStyle}" />
                        <Entry Text="{Binding idInvernadero}" Style="{StaticResource EntryStyle}" />

                        <!-- Campo Nombre -->
                        <Label Text="Nombre:" Style="{StaticResource LabelFieldStyle}" />
                        <Entry Text="{Binding nombreInvernadero}" Style="{StaticResource EntryStyle}" />

                        <!-- Campo Descripción (Asegúrate de que exista en el ViewModel) -->
                        <Label Text="Descripción:" Style="{StaticResource LabelFieldStyle}" />
                        <Editor Text="{Binding Descripcion}" HeightRequest="100"/>

                        <!-- Botones alineados -->
                        <Grid ColumnDefinitions="*,*" Padding="0,10,0,0">
                            <Button Command="{Binding VolverCommand}"
                                    Text="Cancelar"
                                    BackgroundColor="#d3d4d2"
                                    TextColor="Black"
                                    Grid.Column="0"
                                    Style="{StaticResource ButtonStyle}"/>

                            <Button Command="{Binding RegistrarInvernadero}"
                                    Text="Aceptar"
                                    BackgroundColor="#4c9f38"
                                    TextColor="White"
                                    Grid.Column="1"
                                    Style="{StaticResource ButtonStyle}"/>
                        </Grid>

                    </VerticalStackLayout>
                </Grid>

            </Frame>

        </VerticalStackLayout>
    </ScrollView>
</ContentPage>